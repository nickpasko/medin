<?xml version="1.0"?>
<settings xmlns="urn:settings" xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:schemaLocation="urn:settings Settings.xsd">
	<list orderAsc="Sort">
		<!--selectRowProperty="IsDefault"-->

		<global>
			<create/>
    </global>

		<actions>
			<visibility/>
			<sort field="Sort"/>
			<edit/>
			<delete/>
		</actions>

		<cols>
			<string name="Name" title="Название"/>
			<string name="PublishDate" title="Дата публикации" />
			<string name="Alias" title="Псевдоним" />
		</cols>

	</list>

	<form>
		<tab name="General">
			<string name="Name" title="Название" />
			<date name="PublishDate" title="Дата публикации" />
			<wysiwyg name="Teaser" title="Вступление" />
			<wysiwyg name="Content" title="Содержание статьи" />
		</tab>
		<tab name="Images">
			<file name="File" size="300" title="Прикреплённое изображение" />
			<select name="Galleries" reference="Galleries" title="Прикреплённые галереи" multiple="true" />
		</tab>
		<tab name="Metadata">
			<string name="Alias" title="Псевдоним" info="Используется для генерации url" />
			<string name="MetaTitle" title="MetaTitle" />
			<string name="MetaKeywords" title="MetaKeywords" />
			<textarea name="MetaDescription" title="MetaDescription" />
		</tab>
	</form>
</settings>